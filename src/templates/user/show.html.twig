{% extends 'base.html.twig' %}

{% block title %}
  user_show
{% endblock %}

{% block body %}
  <div>
    {{ include('components/navbar.html.twig') }}
  </div>

  <div class="default-container">
    <div>
      <h4>{{ user.id }}</h4>
      <h1>{{ user.username }}</h1>
      <p>{{ user.email }}</p>
      <h4>{{ user.IsAdmin ?'Yes':'No'}}</h4>
      <div class="col">
        <form action="{{ path('app_user_votes', { id: user.id }) }}" method="post">
          <button class="badge bg-success" name="votes" value="up">Vote up</button>
          <button class="badge bg-danger" name="votes" value="down">Vote down</button>
          <span class="badge bg-secondary">{{ user.getVotes }}</span>
        </form>
      </div>
      <br>
      <div>
        <a href="{{ path('app_user_modify', { email: user.email }) }}">
          <button type="button" class="btn btn-primary">Update User</button>
        </a>
        <a href="{{ path('app_user_delete', { email: user.email }) }}">
          <button type="button" class="btn btn-danger">Delete User</button>
        </a>
      </div>
    </div>
    <div>
      <h2>Il y a {{ user.posts|length }} post(s):</h2>
      <ul>
        {% for post in user.posts %}
          <p>{{ post.id }}</p>
          <a href="{{ path('app_post_show', { id: post.id }) }}">{{ post.title }}</a>
          <p>{{ post.content }}</p>
          <p>{{ post.createdAt|ago }}</p>
        {% endfor %}
    </div>
  </div>
{% endblock %}
