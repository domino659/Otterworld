{% extends 'base.html.twig' %}

{% block title %}
  user_show
{% endblock %}

{% block body %}
  <div>
    {{ include('components/navbar.html.twig') }}
  </div>

  <div class="default-container">
    <div class="card">
      {# <label class="default-label">Id</label>
      <h4>{{ user.id }}</h4> #}
      <label class="default-label">Username</label>
      <h1>{{ user.username }}</h1>
      <label class="default-label">Email</label>
      <p>{{ user.email }}</p>
      <label class="default-label">Admin</label>
      <h4>{{ user.IsAdmin ?'Yes':'No'}}</h4>
      <div class="col">
        <form action="{{ path('app_user_votes', { id: user.id }) }}" method="post">
          <div>
          <label class="default-label">Votes:</label>
          <span class="badge bg-secondary">{{ user.getVotes }}</span>
          </div>
          <button class="badge bg-success" name="votes" value="up">Vote up</button>
          <button class="badge bg-danger" name="votes" value="down">Vote down</button>
        </form>
      </div>
      <br>
      <div>
        <a href="{{ path('app_user_update', { email: user.email }) }}">
          <button type="button" class="btn btn-light">Update</button>
        </a>
        <a href="{{ path('app_user_delete', { email: user.email }) }}">
          <button type="button" class="btn btn-dark">Delete</button>
        </a>
      </div>
    </div>
    <div>
      <h2>{{ user.posts|length }} Post(s):</h2>
      <ul>
        {% for post in user.posts %}
          <div class="card">
            {# <label class="default-label">Id</label>
            <h4>{{ post.id }}</h4> #}
            <label class="default-label">Titre</label>
            <a class="minor_link" href="{{ path('app_post_show', { id: post.id }) }}"><h3>{{ post.title }}</h3></a>
            <label class="default-label">Content</label>
            <p>{{ post.content }}</p>
            <p>{{ post.createdAt|ago }}</p>
          </div>
        {% endfor %}
    </div>
  </div>
{% endblock %}
